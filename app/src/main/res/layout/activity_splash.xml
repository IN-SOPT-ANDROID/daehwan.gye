<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.view.greet.SplashActivity">

    <TextView
        android:id="@+id/txt_splash_introducing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="100dp"

        android:text="@string/txt_splash_introducing"
        android:textSize="15sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_splash_logo"
        android:layout_width="200dp"
        android:layout_height="120dp"

        android:layout_marginTop="50dp"

        android:contentDescription="smeme logo"

        android:src="@drawable/img_splash_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_splash_introducing" />


    <Button
        android:id="@+id/btn_splash_go_to_sign_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginHorizontal="130dp"
        android:layout_marginTop="250dp"

        android:text="이메일 로그인"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/img_splash_logo" />

    <TextView
        android:id="@+id/txt_splash_go_to_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginBottom="70dp"

        android:text="아직 Smeme 회원이 아니신가요?"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/btn_splash_go_to_sign_in"
        app:layout_constraintStart_toStartOf="@id/btn_splash_go_to_sign_in"

        app:layout_constraintTop_toBottomOf="@id/btn_splash_go_to_sign_in" />

</androidx.constraintlayout.widget.ConstraintLayout>