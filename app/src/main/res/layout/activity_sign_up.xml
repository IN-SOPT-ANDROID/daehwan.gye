<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".week1.ui.signup.SignUpActivity">

    <TextView
        android:id="@+id/signup_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"

        android:text="SIGNUP"
        android:textSize="20dp"
        android:textStyle="bold"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/signup_tv_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="32dp"

        android:text="@string/id"
        android:textSize="15dp"
        android:textStyle="bold"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signup_tv_title" />

    <EditText
        android:id="@+id/signup_et_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="20dp"

        android:hint="아이디를 입력해주세요."
        android:inputType="text"

        app:layout_constraintStart_toStartOf="@id/signup_tv_id"
        app:layout_constraintTop_toBottomOf="@id/signup_tv_id" />


    <TextView
        android:id="@+id/signup_tv_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"

        android:text="@string/password"
        android:textSize="15dp"
        android:textStyle="bold"

        app:layout_constraintStart_toStartOf="@id/signup_tv_id"
        app:layout_constraintTop_toBottomOf="@id/signup_et_id" />

    <EditText
        android:id="@+id/signup_et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="20dp"

        android:hint="@string/prompt_password"
        android:inputType="textPassword"

        app:layout_constraintStart_toStartOf="@id/signup_tv_id"
        app:layout_constraintTop_toBottomOf="@id/signup_tv_password" />

    <TextView
        android:id="@+id/signup_tv_mbti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"

        android:text="@string/mbti"
        android:textSize="15dp"
        android:textStyle="bold"

        app:layout_constraintStart_toStartOf="@id/signup_tv_id"
        app:layout_constraintTop_toBottomOf="@id/signup_et_password" />

    <EditText
        android:id="@+id/signup_et_mbti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="20dp"

        android:hint="@string/prompt_mbti"
        android:inputType="text"

        app:layout_constraintStart_toStartOf="@id/signup_tv_id"
        app:layout_constraintTop_toBottomOf="@id/signup_tv_mbti" />

    <Button
        android:id="@+id/btn_signUp_complete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="32dp"

        android:text="회원가입 완료"
        android:textStyle="bold"

        app:layout_constraintStart_toStartOf="@id/signup_tv_id"
        app:layout_constraintTop_toBottomOf="@id/signup_et_mbti" />

</androidx.constraintlayout.widget.ConstraintLayout>